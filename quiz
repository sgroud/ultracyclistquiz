let index = 0;
let score = { A: 0, B: 0, C: 0 };

function showQuestion() {
  const q = questions[index];
  document.getElementById("question").textContent = q.q;
  document.getElementById("a").textContent = "A. " + q.A;
  document.getElementById("b").textContent = "B. " + q.B;
  document.getElementById("c").textContent = "C. " + q.C;
}

function answer(letter) {
  score[letter]++;
  index++;
  index < questions.length ? showQuestion() : showResult();
}

function showResult() {
  document.getElementById("quiz").classList.add("hidden");

  const max = Object.keys(score).reduce((a, b) =>
    score[a] > score[b] ? a : b
  );

  const results = {
    A: "ğŸŒ **Lâ€™EXPLORATEUR**\nTu roules pour lâ€™aventure, la dÃ©couverte et la libertÃ©.\nğŸ‘‰ Formats conseillÃ©s : parcours aventure, ultra accessible.",
    B: "ğŸ”¥ **Lâ€™AVENTURIER**\nTu aimes repousser tes limites avec intelligence.\nğŸ‘‰ Formats conseillÃ©s : ultra intermÃ©diaire, dÃ©fis progressifs.",
    C: "âš¡ **Lâ€™ULTRA-RIDER**\nTu recherches lâ€™intensitÃ© et le dÃ©fi total.\nğŸ‘‰ Formats conseillÃ©s : longues distances, autonomie complÃ¨te."
  };

  const resultDiv = document.getElementById("result");
  resultDiv.classList.remove("hidden");
  resultDiv.innerHTML = results[max].replace(/\n/g, "<br>");
}

showQuestion();
