  function answer(letter) {
    score[letter]++;
    current++;
    current < questions.length ? showQuestion() : showResult();
  }

  function showResult() {
    document.getElementById("quiz").classList.add("hidden");

    const resultKey = Object.keys(score).reduce((a, b) =>
